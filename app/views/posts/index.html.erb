<h1>Posts</h1>
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>
					#
				</th>
				<th>
					Date
				</th>
				<th>
					User
				</th>
				<th>
					Ratoionale
				</th>
			</tr>
		</thead>
		 <tbody>
			<% @post.each do |post| %>
			<tr>
				<td>
					<%= post.id %>
				</td>
				<td>
					<%= post.date %>
				</td>
				<td>
					<%= post.user.full_name %>
				</td>
				<td>
					<%= truncate(post.rationale) %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table> 